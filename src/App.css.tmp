/* =================================================================== */
/* GENERAL */
/* =================================================================== */

:root {
  --primary-red: #da291c;
  --secondary-red: #9F261D;
  --background-dark: #333333;
  --background-light: #f7f6f5;
  --background-white: #ffffff;
  --transition-speed: 0.5s;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  scroll-behavior: smooth;
  overflow-x: hidden;
  position: static;
}

#root {
  height: 100%;
  width: 100%;
  margin: 0 auto;
  padding-top: 0;
  align-content: center;
  position: relative;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  from { transform: translateX(-100%); }
  to { transform: translateX(0); }
}

@keyframes typing {
  from { width: 0 }
  to { width: 17ch }
}

@keyframes blink {
  50% { border-color: transparent }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}

.hover-scale {
  transition: transform var(--transition-speed) ease;
}

.hover-scale:hover {
  transform: scale(1.05);
}

.section-background {
  width: 100%;
  min-height: 400px;
  display: flex;
  justify-content: center;
  background-color: var(--background-light);
}

.section-container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 60px 60px 80px 60px;
  box-sizing: border-box;
}

#about, #mywork, #contact {
  scroll-margin-top: 80px;
}

.social-links {
  margin-left: 20px;
  display: flex;
  gap: 1.5rem;
}

.social-links a {
  color: white;
  transition: transform 0.3s ease;
}

.social-links a:hover {
  transform: translateY(-3px);
  color: white;
}

hr {
  margin: 0;
  border: none;
  border-top: 1px solid var(--secondary-red);
}

/* =================================================================== */
/* HEADER & FOOTER */
/* =================================================================== */

header, footer {
  display: flex;
  flex-direction: column;
  left: 0;
  right: 0;
  background-color: var(--primary-red);
  color: white;
}

header {
  height: 90px;
  position: fixed;
  top: 0;
  z-index: 1000;
  box-shadow: 0 10px 20px var(--secondary-red);
}

footer {
  bottom: 0;
  height: 120px;
  box-shadow: 0 -10px 20px var(--secondary-red);
}

.edge-mini-bar {
  width: 100%;
  height: 10px;
  background-color: var(--secondary-red);
}

footer .edge-mini-bar {
  height: 25px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

header .edge-content, footer .edge-content {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: space-between;
  background-color: var(--primary-red);
}

footer .edge-content {
  justify-content: center;
}

footer p {
  margin: 0;
  padding: 0 20px;
  color: white;
}

header .edge-content img {
  height: 40px;
  width: auto;
  margin: 0 80px;
  filter: brightness(0) invert(1);
}

header .edge-content nav {
  display: flex;
  flex: 1;
  max-width: 600px;
  justify-content: space-around;
  margin-right: 30px;
}

header .edge-content nav a {
  color: white;
  padding: 10px;
  text-decoration: none;
  font-weight: bold;
  position: relative;
  transition: color var(--transition-speed) ease;
}

header .edge-content nav a::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 50%;
  background-color: white;
  transition: all var(--transition-speed) ease;
  transform: translateX(-50%);
}

header .edge-content nav a:hover::after {
  width: 100%;
}

header .edge-content nav a:hover {
  color: var(--background-light);
}

/* =================================================================== */
/* HERO */
/* =================================================================== */

#hero.section-background {
  background-color: var(--background-light);
}

#hero .section-container {
  display: flex;
  flex-direction: row;
  height: 100vh;
  align-items: center;
  padding-top: 90px;
}

#hero .hero-title {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  align-items: flex-start;
}

#hero .hero-title h1 {
  top: 100px;
  left: 20px;
  font-size: 4rem;
  margin: 15px 0;
  color: var(--primary-red);
}

#hero .hero-title p {
  top: 100px;
  left: 20px;
  margin: 0;
  color: #333333;
  font-size: 1.2rem;
}

#hero .text-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 15px;
  height: 280px;
  max-width: 420px;
  margin: auto 0;
  color: #333333;
  font-size: 1.2rem;
}

#hero .text-box h2 {
  font-family: 'Fira Code', monospace;
  padding: 0;
  margin: 0;
  text-shadow: 1px 3px 1px rgba(0, 0, 0, 0.5);
  white-space: nowrap;
  overflow: hidden;
  border-right: .15em solid currentColor;
  animation:
    typing 3s steps(17, end) backwards,
    blink .75s step-end infinite;
}

/* =================================================================== */
/* ABOUT */
/* =================================================================== */

#about.section-background {
  background-color: var(--background-dark);
  box-shadow: 0 -16px 24px rgba(51, 51, 51, 0.5),
              0 16px 24px rgba(51, 51, 51, 0.5);
}

#about .section-container {
  display: grid;
  grid-template-columns: 300px 1fr;
  gap: 2rem;
  color: white;
  align-items: center;
}

#about .image-box {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  overflow: hidden;
  justify-self: center;
}

#about .image-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
@media (max-width: 799px) {
  #about .image-box {
    display: none;
  }
  #about .section-container {
  display: flex;

  gap: 2rem;
  color: white;
  align-items: center;
}
}

#about .content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: end;
  gap: 2rem;
}

#about .title {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

#about .text-box {
  max-width: 600px;
  line-height: 1.6;
}

/* =================================================================== */
/* MY WORK */
/* =================================================================== */

#mywork.section-background {
  background-color: var(--background-light);
}

#mywork .section-container {
  min-height: 200px;
  display: flex;
  flex-direction: column;
  gap: 20px;
  justify-content: center;
  align-items: flex-start;
}

#mywork .main-container {
  width: 100%;
  height: fit-content;
  border-radius: 20px;
  background-color: #ffffff;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 2rem;
  overflow: hidden;
}

#mywork .headOfContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
}

#mywork button.showMore {
  background-color: var(--primary-red);
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all var(--transition-speed) ease;
  box-shadow: 0 2px 4px rgba(218, 41, 28, 0.2);
}

#mywork button.showMore:hover {
  background-color: var(--secondary-red);
  transform: scale(0.95);
  box-shadow: 0 4px 8px rgba(218, 41, 28, 0.3);
}

#mywork h2 {
  padding: 20px 0 0 50px;
  margin-bottom: 0;
  color: #333333;
}

.sub-container {
  display: flex;
  flex-flow: row wrap;
  padding: 40px;
  gap: 20px;
  width: 100%;
  justify-content: flex-start;
}

.sub-container:not(.show-all) {
  overflow: hidden;
  max-height: 230px;
}

.projects-container .sub-container{
  
}


.project-card {
  background-color: var(--background-white);
  height: 170px;
  min-width: 300px;
  max-width: 400px;
  display: flex;
  flex-direction: column;
  border: 2px solid var(--primary-red);
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all var(--transition-speed) ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.projects-container.main-container {

}

.project-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 12px rgba(218, 41, 28, 0.2);
  border-color: var(--secondary-red);
}

.project-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    120deg,
    transparent,
    rgba(218, 41, 28, 0.1),
    transparent
  );
  transition: all 0.6s ease;
}

.project-card:hover::before {
  left: 100%;
}

.project-card .title {
  font-size: 1.4rem;
  color: white;
  padding: 12px 15px 8px 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
  background-color: var(--primary-red);
}

.project-card .description {
  font-style: italic;
  font-size: 0.95rem;
  color: #666666;
  margin: 8px 15px 15px 15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  flex-grow: 1;
}

.tech-stack .sub-container {
  gap: 8px;
}

.tech-item {
  color: #333333;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8px 16px;
  gap: 8px;
  min-width: 100px;
  transition: transform var(--transition-speed) ease;
  border: 2px solid #f7f6f5;
}

.tech-item:hover {
  transform: translateY(-2px);
  border-color: var(--primary-red);
}

.tech-item span {
  font-size: 1rem;
  font-weight: 500;
}
