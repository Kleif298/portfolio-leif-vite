/* Career Overview Component - Modern Professional Design */
.career-overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-6);
  padding: var(--space-8) 30px;
}

@media (max-width: 768px) {
  .career-overview {
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }
}

.career-overview__card {
  background: white;
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  text-align: center;
  border: 1px solid var(--neutral-200);
  box-shadow: var(--shadow);
  position: relative;
  overflow: hidden;
  transition: all var(--transition) var(--transition);
}

.career-overview__card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(135deg, var(--primary), var(--accent));
}

.career-overview__card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
    
}

.career-overview__card-icon {
  width: 48px;
  height: 48px;
  margin: 0 auto var(--space-4);
  background: linear-gradient(135deg, var(--primary), var(--accent));
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.5rem;
  font-weight: bold;
}

.career-overview__card-title {
  font-size: var(--text-xl);
  font-weight: 700;
  margin-bottom: var(--space-3);
  color: var(--neutral-900);
  letter-spacing: -0.02em;
}

.career-overview__card-content {
  font-size: var(--text-base);
  line-height: 1.6;
  color: var(--neutral-600);
  margin-bottom: var(--space-4);
}

.career-overview__card-metric {
  font-size: var(--text-3xl);
  font-weight: 800;
  color: var(--primary);
  font-family: var(--font-mono);
  margin-bottom: var(--space-2);
  display: block;
}

.career-overview__card-label {
  font-size: var(--text-sm);
  color: var(--neutral-500);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 600;
}

/* Specialized card variants */
.career-overview__card--experience {
  background: linear-gradient(135deg, var(--primary)05, white);
}

.career-overview__card--projects {
  background: linear-gradient(135deg, var(--accent)05, white);
}

.career-overview__card--skills {
  background: linear-gradient(135deg, var(--neutral-100), white);
}

/* Progress indicators */
.career-overview__progress {
  width: 100%;
  height: 8px;
  background: var(--neutral-200);
  border-radius: var(--radius-full);
  overflow: hidden;
  margin-top: var(--space-3);
}

.career-overview__progress-bar {
  height: 100%;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  border-radius: var(--radius-full);
  transition: width var(--transition) var(--transition);
}

/* Timeline variant */
.career-overview--timeline {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  position: relative;
  padding-left: var(--space-8);
}

.career-overview--timeline::before {
  content: '';
  position: absolute;
  left: var(--space-4);
  top: 0;
  bottom: 0;
  width: 2px;
  background: linear-gradient(to bottom, var(--primary), var(--accent));
  border-radius: 1px;
}

.career-overview--timeline .career-overview__card {
  position: relative;
  margin-left: var(--space-6);
  text-align: left;
}

.career-overview--timeline .career-overview__card::after {
  content: '';
  position: absolute;
  left: calc(-1 * var(--space-6) - 6px);
  top: var(--space-6);
  width: 12px;
  height: 12px;
  background: var(--primary);
  border: 3px solid white;
  border-radius: 50%;
  box-shadow: 0 0 0 2px var(--primary);
}


